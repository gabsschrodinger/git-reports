{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES6",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "src"
  },
  "exclude": ["dist", "node_modules", "tests/**"]
}
